<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tc="http://schemas.android.com/apk/res/com.example.lumoback20160318"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView01"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#ffac00"
        android:text="智能腰带"
        android:gravity="left|center"
        android:textSize="20dp" />
    <LinearLayout 
        android:id="@+id/layout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="开启蓝牙" />
        
        <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="开始测量" />
        
        <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:text="结束测量" />
    </LinearLayout>
        
    
    <ListView 
        android:id="@+id/arraylistview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
    </ListView>

    <com.heartrate.TasksCompletedView
        android:id="@+id/tasks_view"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_weight="0.38"
        tc:circleColor="@color/circle_color"
        tc:radius="60dip"
        tc:ringColor="@color/ring_color"
        tc:strokeWidth="10dip" />
    "

    <LinearLayout
      android:id="@+id/linearLayout1"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:orientation="vertical" >
      
    </LinearLayout>

</LinearLayout>